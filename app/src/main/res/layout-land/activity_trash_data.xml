<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/light_green"
    tools:context=".view.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/imperial_blue"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/backbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/abc_vector_test" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/backbutton"
                android:fontFamily="@font/concertone_regular"
                android:text="Détails du déchet"
                android:textColor="@color/beige"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/concertone_regular"
                        android:text="Nom du déchet : "
                        android:textColor="@color/imperial_blue"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/trash_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/concertone_regular"
                        android:textColor="@color/imperial_blue"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/concertone_regular"
                        android:text="Type : "
                        android:textColor="@color/imperial_blue"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/trash_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/concertone_regular"
                        android:textColor="@color/imperial_blue"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/concertone_regular"
                        android:text="Description : "
                        android:textColor="@color/imperial_blue"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/trash_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/concertone_regular"
                        android:textColor="@color/imperial_blue"
                        android:textSize="20dp" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/trash_pict"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="250dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tweet_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:backgroundTint="@color/imperial_blue"
                android:fontFamily="@font/concertone_regular"
                android:text="Tweeter !"
                android:textColor="@color/beige" />

            <Button
                android:id="@+id/pick_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:backgroundTint="@color/imperial_blue"
                android:fontFamily="@font/concertone_regular"
                android:text="Ramasser !"
                android:textColor="@color/beige" />

            <Button
                android:id="@+id/goTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/imperial_blue"
                android:fontFamily="@font/concertone_regular"
                android:text="Y aller !"
                android:textColor="@color/beige" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>