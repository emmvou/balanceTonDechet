<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/trashName"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:text="Trash"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="distance" />

        <CheckBox
            android:id="@+id/toPick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/imperial_blue"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/grower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/desc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".50"
            android:text="Alors voici un texte d'exemple blablabla bla blabla et c'est un poil long" />

        <TextView
            android:id="@+id/itineraire_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".50"
            android:text="Type" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight=".50"
            android:icon="@drawable/ic_baseline_insert_photo_24" />
    </LinearLayout>

</LinearLayout>